
@{
    ViewBag.Title = "School_Board";
}

<style>
    #panel {
        padding: 50px;
        display: none;
    }
</style>  
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>

    $(document).ready(function () {
                
    $("#flip").click(function(){
        $("#panel").toggle("slow");
    });
});
</script>

 <!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Board</h3>
            </div>

            <div class="title_right">
                <div class="col-md-6 col-sm-6 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <ol class="breadcrumb">
                            <li><a href="@Url.Action("Dashboard", "PraescioAdmin")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                            <li class="active">Select Board</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-lg-4 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>MH</h3>
                        <p>Board</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-university"></i>
                    </div>
                    <a href="#" class="small-box-footer" id="flip">Choose <i class="fa fa-arrow-circle-right"></i></a>
                    <div id="panel">
                        <form class="form-horizontal form-label-left">
                            <label for="heard">Select Medium</label>
                            <select id="heard" class="form-control" required>
                                <option value="">Choose..</option>
                                <option value="press">Marathi</option>
                                <option value="mouth">English</option>
                            </select><br />
                            <input type="submit" class="btn btn-round btn-default" value="Submit">
                        </form>
                    </div>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-4 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>CBSE</h3>
                        <p>Board</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-university"></i>
                    </div>
                    <a href="school_register.html" class="small-box-footer">Choose <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-4 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>ICSE</h3>
                        <p>Board</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-university"></i>
                    </div>
                    <a href="school_register.html" class="small-box-footer">Choose <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
        </div><!-- /.row -->
        <div class="clearfix"></div>
        <br />
    </div>
</div>
<!-- /page content -->

