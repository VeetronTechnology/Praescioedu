
@{
    ViewBag.Title = "Payment Details";

    var assignmentTitle = Praescio.Models.Common.ACCOUNT.AccountTypeId == (int)Praescio.BusinessEntities.Common.AccountType.SuperAdmin ? "Lessons" : "Assignment";
    
}

<!-- page content -->
<div class="right_col" role="main" ng-controller="PaymentCtrl">
    <div class="content">
        <div class="page-title">
            <div class="title_left">
                <h3>@ViewBag.Title</h3>
            </div>
            <div class="title_right">
                
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Payment Details</h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        
                      <div class="row">
                        <div class="col-md-12" id="pnl-frmPU">
                          @if (ViewBag.Success)
                          {
                              <div class="alert alert-success text-center">
                                @ViewBag.Message
                              </div>
                          }
                          else
                          {
                              <div class="alert alert-warning text-center">
                                @ViewBag.Message
                              </div>
                          }
                          <br />
                          <div>
                            <a class="btn btn-primary btn-sm" href="@ViewBag.RedirectURL">Go back</a>
                          </div>
                        </div>
                      </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>