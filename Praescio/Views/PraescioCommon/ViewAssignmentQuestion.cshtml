    @section Scripts{

        <script type="text/javascript">
          myApp.controller('AssignmentQuestionCtrl', function ($scope, $rootScope, $filter, NetworkService, $timeout, $interval) {
                var formdata = new FormData();
                $scope.getTheFiles = function ($files) {
                    $scope.isDisplay = true;
                    if ($files.length != 0)
                        $scope.FileUpload = [];
                    for (var i = 0; i < $files.length; i++) {
                        $scope.FileUpload.push({ FileName: $files[i].name, ContentType: $files[i].type, Size: $files[i].size });
                    }
                    $scope.isDisplay = true;
                    angular.forEach($files, function (value, key) {
                        formdata.append(0, value);
                    });
                };

                $scope.ExamStartDateTimer = null;
                $scope.Loading = true;

                $scope.ExamStartDateTimer = "Loading...";
                NetworkService.get('PraescioCommon/GetUserAssessmentDetail?assignmentid=@ViewBag.assignmentid').success(function (data) {
                    if (data != null) {
                      $interval(function () {
                        $scope.ExamStartDateTimer = GetStopWatchTime(data.ExamStartDate);
                      }, 1000);
                    } else {
                      $scope.ExamStartDateTimer = null;
                    }
                });

                $scope.AssignmentMain = {}

                NetworkService.get('PraescioCommon/GetQuestionByAssignmentId?assignmentid=@ViewBag.assignmentid&userId=0').success(function (data) {
                    $scope.AssignmentMain = data;
                    $scope.Assignment = data.Assignment;
                    $scope.QuestionList = data.Question;
                    $scope.QuestionAssessment = data.QuestionAssessmentDetail;
                    $scope.UserAssessmentDetail = data.UserAssessmentDetail;
                    //console.log('data.Assignment.UploadFileSrc', data.Assignment.UploadFileSrc, (data.Assignment.UploadFileSrc != ""))
                    if (data.Assignment.UploadFileSrc != "" && data.Assignment.UploadFileSrc != null) {
                      $('#AssignmentPDF').append('<embed id="pdfFile" type="application/pdf" src="@Url.Content("~/")' + data.Assignment.UploadFileSrc + '" height="500px" width="80%" internalinstanceid="37" title=""><br><br><br>');
                    }
                });

                $scope.isQuestionContain = function (id, questionType) {
                    var result = false;

                    $.each($scope.QuestionList, function (i, e) {
                        if ($scope.QuestionList[i].QuestionTypeId == questionType) {
                            result = true;
                        }
                    })

                    var qts = 0;
                    var assessment = 0;
                    var userSubmittedCount = 0;
                    $.each($scope.QuestionAssessment, function (i, e) {
                        if ($scope.QuestionAssessment[i].Question.QuestionTypeId == questionType) {
                          qts = qts + 1;
                          //console.log(questionType, i)
                            /*if ($scope.QuestionAssessment[i].UserAssessment != null) {
                                assessment = assessment + 1;
                            }*/
                            if ($scope.QuestionAssessment[i].Question.IsUserSubmitted) {
                              userSubmittedCount++;
                            }
                        }
                    });
                    //console.log(id, questionType, qts, userSubmittedCount)
                    if (qts > 0 && qts == userSubmittedCount) {
                        $('#' + id).find('li').removeClass('tick1').addClass('green');
                    }
                    else {
                        $('#' + id).find('li').removeClass('tick1').addClass('orange');
                    }

                    return result;
                }

                $scope.IsSubmitted = function ($event, questiontype) {
                    //console.log('$event', $event, $event.currentTarget.href)
                    $event.preventDefault();
                    var redirectTo = $event.currentTarget.href;

                    var prevent = false;
                    $.each($scope.QuestionList, function (i, e) {
                      if ($scope.QuestionList[i].IsUserSubmitted == true && $scope.QuestionList[i].QuestionTypeId == questiontype) {
                        prevent = true;
                      }
                    })
                    //console.log('$scope.QuestionList[i].IsUserSubmitted', $scope.QuestionList, questiontype, prevent)
                    if (prevent) {
                      $event.preventDefault();
                      swal({
                        title: "Already submitted!!!",
                        text: "Press Ok to Continue.",
                        type: "info",
                        confirmButtonColor: "info",
                        showCancelButton: false
                      });
                      return;
                    }

                    NetworkService.get('PraescioCommon/IsExamStarted?assignmentid=@ViewBag.assignmentid').success(function (data) {
                        //console.log(data);
                        if (data == false) {

                            swal({
                                title: "Your Start Time will be started on OK",
                                //text: "You will not be able to recover this imaginary file!",
                                type: "warning",
                                showCancelButton: true,
                                confirmButtonClass: "btn-danger",
                                confirmButtonText: "Yes!",
                                cancelButtonText: "No, cancel plx!",
                                closeOnConfirm: true,
                                closeOnCancel: true
                            }, function (isConfirm) {
                                if (isConfirm) {
                                    NetworkService.insert('PraescioCommon/LogExamStartDate?assignmentid=@ViewBag.assignmentid', null).success(function (data) {
                                      window.location.href = redirectTo;
                                    });
                                    //swal("Deleted!", "Your imaginary file has been deleted.", "success");
                                } else {
                                  $event.preventDefault();

                                }
                            });
                        } else {
                          window.location.href = redirectTo;
                        }
                    });
                }

                $scope.ChangedAssignmentStatus = function () {

                    NetworkService.insert('PraescioCommon/ChangedAssignmentStatus?assignmentid=@ViewBag.assignmentid&assignmentstatusid=@Convert.ToInt16(Praescio.BusinessEntities.Common.AssignmentStatus.SubmittedByStudent)&studentId=@(Praescio.Models.Common.ACCOUNT.AccountId)', null).success(function (data) {
                        swal({
                            title: "Your assignment has been Successfully send to teacher !!!",
                            text: "Press Ok to Continue.",
                            type: "success",
                            confirmButtonColor: "green",
                            showCancelButton: false
                        });
                        $scope.UserAssessmentDetail.StatusId = @(Convert.ToInt16(Praescio.BusinessEntities.Common.AssignmentStatus.SubmittedByStudent));
                    });
                }
            });
        </script>
    }