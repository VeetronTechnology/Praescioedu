@model  Praescio.Domain.Models.ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<body ng-controller="ChangePasswordCtrl">
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <h3><i class="fa fa-lock fa-4x"></i></h3>
                                <h2 class="text-center">Change Password</h2>
                                <div class="panel-body">
                                @using (Html.BeginForm("ChangePassword", "Account", new { returnUrl = ViewBag.ReturnUrl }))
                                {
                                    @Html.AntiForgeryToken()
                                        <fieldset>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                    @*<input id="passwordcurrent" placeholder="Current Password" ng-model="CPModel.passwordcurrent" class="form-control" type="text" required="">*@
                                                    @Html.PasswordFor(model => model.PasswordCurrent, new { @class = "form-control input-sm", @placeholder = "Enter current password", @style = "width:100%" })
                                                    @Html.ValidationMessageFor(model => model.PasswordCurrent, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                    @*<input id="password" placeholder="Password" ng-model="CPModel.password" class="form-control" type="text" required="">*@
                                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control input-sm", @placeholder = "Enter new password", @style = "width:100%" })
                                                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                    @*<input id="passwordconfirm" placeholder="Confirm Password" ng-model="CPModel.passwordconfirm" class="form-control" type="text" required="">*@
                                                    @Html.PasswordFor(model => model.PasswordConfirm, new { @class = "form-control input-sm", @placeholder = "Confirm new password", @style = "width:100%" })
                                                    @Html.ValidationMessageFor(model => model.PasswordConfirm, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @*<span class="btn btn-lg btn-primary btn-block" ng-click="Submit()" ng-disabled="savingRequest">
                                                    Submit
                                                    <i class="fa fa-spinner fa-spin" ng-show="savingRequest"></i>
                                                </span>*@
                                                <input type="submit" value="Submit" name="submit" class="btn btn-lg btn-primary btn-block" />
                                            </div>
                                        </fieldset>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

<!-- Sweet alert -->
@System.Web.Optimization.Scripts.Render("~/Content/plugin/sweetalert.min.js")
@System.Web.Optimization.Styles.Render("~/Content/plugin/sweetalert.css")

<script type="text/javascript">

    if ('@ViewBag.Success' != '') {
        swal({
            title: '@ViewBag.Success',
            text: "Press Ok to Continue.",
            type: "success",
            confirmButtonColor: "green",
            showCancelButton: false
        },function() {
            window.location.href = "@ViewBag.ReturnUrl";
        });
    }

    if ('@ViewBag.Error' != '') {
        swal({
            title: '@ViewBag.Error',
            text: "Press Ok to Continue.",
            type: "error",
            confirmButtonColor: "red",
            showCancelButton: false
        });
    }

</script>
