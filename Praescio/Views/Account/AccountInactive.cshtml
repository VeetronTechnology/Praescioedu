
@{
//Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<body style="background: #fff">
    <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <h3 class="text-danger">
              Your account is inactive at the moment.
            </h3>
            @if (ViewBag.InactiveReason == 0)
            {
                <h4 class="text-warning">
                  Your account will be active only on date (@(Praescio.Models.Common.ACCOUNT.ActivateOn != null ? Praescio.Models.Common.ACCOUNT.ActivateOn.Value.ToString("dd/MM/yyyy") : "")).
                </h4>
            }
            else if (ViewBag.InactiveReason == 1)
            {
                <h4 class="text-warning">
                  Your account will be active only when your parent's account gets activated first.
                </h4>
            }
          </div>
        </div>
    </div>
</body>
